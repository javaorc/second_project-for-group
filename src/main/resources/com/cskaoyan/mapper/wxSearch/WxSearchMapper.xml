<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mapper.wxSearch.WxSearchMapper">

    <resultMap id="keywordMap" type="com.cskaoyan.bean.Keyword">
        <result column="id" property="id"/>
        <result column="keyword" property="keyword"/>
        <result column="url" property="url"/>
        <result column="is_hot" property="isHot"/>
        <result column="is_default" property="isDefault"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="add_time" property="addTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    <!--查询默认关键字-->
    <select id="queryDefaultKeyword" resultMap="keywordMap">
        select
            id,
            keyword,
            url,
            is_hot,
            is_default,
            sort_order,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_keyword
        where is_default = 1
        limit 1 offset 0
    </select>

    <!--查询历史关键字列表-->
    <select id="queryHistoryKeywordList" resultType="com.cskaoyan.bean.wxBean.WxSearchKeyword">
        select keyword
        from cskaoyan_mall_search_history
        where user_id = #{uid}
        order by add_time desc
    </select>

    <!--查询热门关键字-->
    <select id="queryHotKeywordList" resultMap="keywordMap">
        select
            id,
            keyword,
            url,
            is_hot,
            is_default,
            sort_order,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_keyword
        where is_hot = 1
        order by add_time desc
    </select>

    <!--清除历史记录-->
    <delete id="clearHistoryKeyword">
        delete from cskaoyan_mall_search_history
        where user_id = #{uid}
    </delete>

</mapper>