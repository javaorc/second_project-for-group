<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.cskaoyan.bean.Comment">
        <id property="id" column="id"/>
        <result property="valueId" column="value_id"/>
        <result property="type" column="type"/>
        <result property="content" column="content"/>
        <result property="userId" column="user_id"/>
        <result property="hasPicture" column="has_picture"/>
        <result property="picUrls" column="pic_urls" typeHandler="com.cskaoyan.typeHandler.StringToListTypeHandler2"/>
        <result property="star" column="star"/>
        <result property="addTime" column="add_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <delete id="deleteOne" parameterType="com.cskaoyan.bean.Comment">
        DELETE
        FROM
        cskaoyan_mall_comment
        WHERE
        id = #{comment.id}
    </delete>

    <select id="queryList" resultMap="BaseResultMap">
        select
        id,
        value_id,
        type,
        content,
        user_id,
        has_picture,
        pic_urls,
        star,
        add_time,
        update_time,
        deleted
        from
        cskaoyan_mall_comment
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
            <if test="valueId != null">
                and value_id = #{valueId}
            </if>
        </where>
        order by #{sort} #{order}
        limit #{limit} offset #{offset}
    </select>

    <select id="queryTotal" resultType="_int">
        select
        count(*)
        from
        cskaoyan_mall_comment
        <where>
            <if test="userId != null">
                user_Id = #{userId}
            </if>
            <if test="valueId != null">
                and value_id = #{valueId}
            </if>
        </where>
    </select>

</mapper>